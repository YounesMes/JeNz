#Task 4 : factorial of a number
A = int(input("Select a number"))
def factorial(A,F=1):
    for number in range(1,A+1):
        F = F*number
    return F

print(" The factorial of " + str(A) + " is :" +format(factorial(A)))




#Task 5 : reverse a string
A= input("write a string")
def reverse(A):
    C=''
    i=len(A)
    while i > 0:
        C=C+A[i-1]
        i= i-1
    return C
print(reverse(A))



#Task 6: sum all the numbers
list1 =[0]
K= int(input("Enter the size of the list"))
for i in range(1,K+1,1):
    C=int(input("select a number"))
    list1.insert(i,C)
print(list1)
list2 =[1,2]
def sum(numbers):
    total = 0
    for x in numbers:
        total += x
    return total
print(sum(list1))


#Task 7 :
list = []
for i in range(1,4):
    C=int(input("select a number"))
    list.insert(i,C)
print(list)
def max1(listA):
    Max = listA[0]
    for y in listA:
        if y>Max :
            Max=y
    return Max

print(max1(list))
