#Palindrom task :
A= input("enter a name")
print(A)
def isPalindrome(string):
    left_pos = 0
    right_pos = len(string) - 1

    while right_pos >= left_pos:
        if not string[left_pos] == string[right_pos]:
            return False
        left_pos += 1
        right_pos -= 1
    return True
print(isPalindrome(A))



#Prime number :
rom math import sqrt
B = int(input("enter a number"))
def Primenumber(number1):
    for number in range(2,number1):
        if  number1 % number == 0:
         return print("The number is not prime")
    else: print("The number is prime")


print(Primenumber(B))



